<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryVariant">@color/light_blueA700</item>
        <item name="colorOnPrimary">@color/toolbar_color_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
    </style>

    <style name="AppToolbarStyle">
        <item name="materialThemeOverlay">@style/AppToolbarMatTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.LargeTitle</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.MediumSubtitle</item>
    </style>

    <style name="AppToolbarMatTheme" parent="">
        <item name="colorSurface">#ff0000</item>
        <item name="colorOnSurface">#00ff00</item>
    </style>

    <style name="TextAppearance.App.LargeTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/josefin_sans_regu</item>
        <item name="android:fontFamily">@font/josefin_sans_regu</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.App.MediumSubtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/josefin_sans_regu</item>
        <item name="android:fontFamily">@font/josefin_sans_regu</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorSurface">@color/purple_a400</item>
        <item name="colorOnSurface">@color/light_blueA700</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

</resources>