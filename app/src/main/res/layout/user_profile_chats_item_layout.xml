<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:useCompatPadding="true"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:shapeAppearance="@style/ShapeAppearance.App.MediumComponent"
    android:id="@+id/chatsDetailsContainer">
    
    <LinearLayout
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        
        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.Media"
            android:adjustViewBounds="true"
            android:elevation="10dp"
            android:id="@+id/userImage"
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"/>
       
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/userName"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="Amol"
                android:textAppearance="@style/TextAppearance.UserName.MediumSubtitle"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="serif"/>
            
            <TextView
                android:id="@+id/userChatMessage"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="Tap To chat"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="#ffffff"
                android:typeface="serif"/>
            
            <TextView
                android:id="@+id/userTime"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="12:03 pm"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="monospace"/>
            
        
        </LinearLayout>
        
    
    </LinearLayout>
    

</com.google.android.material.card.MaterialCardView>