<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="right"
	android:padding="5dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:background="@drawable/message_sent_bg"
		android:elevation="10dp">

		<ImageView
			android:src="@drawable/ic_profile"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:id="@+id/sentmessageImage"
			android:visibility="gone"
			android:padding="2dp"
			android:adjustViewBounds="true"
			android:layout_gravity="center"/>

		<LinearLayout
			android:id="@+id/sent_PdfContainer"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:src="@drawable/ic_attach_pdf"
				android:layout_width="40dp"
				android:layout_height="40dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="hrhrhrhrhebeb"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:gravity="center_vertical"
				android:id="@+id/sentPdfName"
				android:typeface="serif"
				android:textColor="#FFFFFFFF"
				android:padding="5dp"
				android:layout_weight="1.0"/>

			<ImageView
				android:src="@drawable/ic_download_white"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:id="@+id/icSentDownloadPdf"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:maxWidth="220dp"
			android:layout_height="wrap_content"
			android:gravity="left">

			<TextView
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TextView"
				android:id="@+id/sentMessage"
				android:textColor="#FFFFFFFF"
				android:maxWidth="230dp"
				android:linksClickable="true"
				android:paddingTop="5dp"
				android:autoLink="web"
				android:paddingBottom="5dp"
				android:paddingRight="10dp"
				android:textIsSelectable="true"
				android:textColorLink="#FF68BBE4"
				android:textSize="18sp"
				android:typeface="serif"
				android:paddingLeft="2dp">

			</TextView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="12:03pm"
				android:layout_gravity="bottom|right"
				android:id="@+id/sentTimeStamp"
				android:textColor="#FFFFFFFF"
				android:typeface="serif"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

