<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/message_sent_bg"
        
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="6dp" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sentmessageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:maxWidth="300dp"
            android:padding="2dp"
            android:src="@drawable/ic_profile"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Chat.Image.Media" />

        <LinearLayout
            android:id="@+id/sent_PdfContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_attach_pdf" />

            <TextView
                android:id="@+id/sentPdfName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="hrhrhrhrhebeb"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFFFF"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/icSentDownloadPdf"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_download_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxHeight="300dp"
            android:maxWidth="220dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sentMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:fontFamily="@font/josefin_sans_regu"
                android:linksClickable="true"
                android:maxWidth="230dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textColorLink="@color/light_blue_500"
                android:textIsSelectable="true"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/sentTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:fontFamily="@font/josefin_sans_regu"
                android:paddingLeft="15dp"
                android:paddingRight="6dp"
                android:text="12:03pm"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>