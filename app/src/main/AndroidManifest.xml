<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amol.realapp.chatty">

    <!-- have full network access -->
    <uses-permission android:name="android.permission.INTERNET"/>

  
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/my_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SplashActivity">

            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:label="Chatty"/>

        <activity
            android:name=".activity.RegisterActivity"
            android:launchMode="singleTop"
            android:label="Register"/>

        <activity
            android:name=".activity.VerifyActivity"
            android:launchMode="singleTop"
            android:label="Verify"/>

        <activity
            android:name=".activity.ProfileActivity"
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.AddProfileDetails"
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.ChatActivity"
            android:launchMode="singleTop"/>

       

        <activity android:name=".activity.GroupActivity"
            android:launchMode="singleTop"
            />

        <activity android:name=".activity.GroupAddUsers"
            android:launchMode="singleTop"
            android:label="Add Users"
            />
        <activity android:name=".activity.StatusViewActivity"
               android:launchMode="singleTop"
        />
        <activity android:name=".activity.GroupChatActivity"
            android:launchMode="singleTop"
            />
        <meta-data android:name="com.google.android.safetynet.ATTEST_API_KEY"
            android:value="AIzaSyA7Vhu_mz6xShfjbUAqm4auwMjbb8GPc14"/>
       
    </application>

</manifest>
